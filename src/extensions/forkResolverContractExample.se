def init():
    self.controller = 0x0
    self.forkResolver = msg.sender

def setForkResolution(branch, winner):
    # do some logic to determine whether branch or child
        # one example is someone like the market/event creator can choose where their market goes
    # if winner == branch, the parent won
    # if winner == child == BRANCHES.getMostRecentChild(branch), the child won
    if(msg.sender == self.forkResolver):
        self.forkResolution[branch] = winner
        return(1)
    else:
        return(0)

def resolveFork(branch):
    if(self.forkResolution[branch]):
        return(self.forkResolution[branch])
    else:
        return(0)
macro FIRST_RESOLVE_BOND: 11 * ONE
macro INDETERMINATE: 1500000000000000000

### Serves to resolve events

# Resolves a binary market
def init():
    self.controller = 0x0

def resolveEvent(event):
    self.controller.assertIsWhitelisted(msg.sender)
    branch = EVENTS.getEventBranch(event)
    outcome = EVENTS.getUncaughtOutcome(event)

    scaledMax = EVENTS.getMaxValue(event)
    scaledMin = EVENTS.getMinValue(event)
    if(categorical(event)):
        scaledMin = ONE
        scaledMax = ONE * EVENTS.getNumOutcomes(event)
        fxpOutcome = round(outcome)
    if(outcome < scaledMin):
        outcome = scaledMin
    elif(outcome > scaledMax):
        outcome = scaledMax
    # outcome of 1 is 1/10**18 or basically 0, but allows us to still check if outcome is 0 or not to see if an outcome has been set
    if(outcome == 0):
        outcome = 1
    EVENTS.setOutcome(event, outcome)
    bond = EVENTS.getBond(event)
    if(EVENTS.getChallenged(event) and EVENTS.getFirstPreliminaryOutcome(event) != EVENTS.getOutcome(event)):
        # pay half of validity bond to challenger
        if(!INFO.getWallet(event).transfer(EVENTS.getExtraBondPoster(event), bond / 2)):
            ~invalid()
        bond -= bond / 2
    if(outcome == INDETERMINATE):
        branchWallet = BRANCHES.getBranchWallet(branch, INFO.getCurrency(event))
        # give event validity bond money to reporters
        if(!INFO.getWallet(event).transfer(branchWallet, bond)):
            ~invalid()
    else:
        # return validity bond as a normal event resolution
        if(!INFO.getWallet(event).transfer(INFO.getCreator(event), bond)):
            ~invalid()
    return(1)

def setController(newController: address):
    if(msg.sender != self.controller):
        ~invalid()
    self.controller = newController
    return(1)

def suicideFunds(to: address):
    if(msg.sender != self.controller):
        ~invalid()
    suicide(to)